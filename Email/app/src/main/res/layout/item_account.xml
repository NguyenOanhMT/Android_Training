<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/dp80">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dp25"
        android:id="@+id/card_view"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50" >
        <TextView
            android:id="@+id/icon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/sp30"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear"
        android:padding="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/card_view">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp5">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp20"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/vernon_bradley" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/_5_30_pm"
                android:layout_centerHorizontal="true"
                android:textColor="@color/dark_blue_grey"
                android:textSize="@dimen/sp13" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp5">
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp20"
                android:textSize="@dimen/sp13"
                android:textColor="@color/dark_blue_grey"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="shall_we_meet_today" />
            <CheckBox
                android:id="@+id/imv_star"
                android:button="@null"
                android:checked="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_checked"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"
        android:layout_alignParentBottom="true"
        android:background="@color/white_two" />

</RelativeLayout>